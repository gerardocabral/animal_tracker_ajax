<p id="notice"><%= notice %></p>

<h1>Listing Animals</h1>
<br>
<table  id="animal_list">
  <thead>
    <tr>
      <th>Common</th>
      <th>Latin</th>
      <th>Kingdom</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @animals.each do |animal| %>
      <tr>
        <td><%= animal.common %></td>
        <td><%= animal.latin %></td>
        <td><%= animal.kingdom %></td>
        <td><%= link_to 'Show', animal %></td>
        <td><%= link_to 'Edit', edit_animal_path(animal) %></td>
        <td><%= link_to 'Destroy', animal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<p>
  <!-- Input area for new wine -->
  <div class="field">
    <label for="animal_common">Common</label><br>
    <input type="text" name="animal[common]" id="animal_common" />
  </div>
  <div class="field">
    <label for="animal_latin">Latin</label><br>
    <input type="text" name="animal[latin]" id="animal_latin" />
  </div>
  <div class="field">
    <label for="animal_kingdom">Kingdom</label><br>
    <select id="animal_kingdom" name="animal[kingdom]">
      <option value="bird">bird</option>
      <option value="reptile">reptile</option>
      <option value="amphibian">amphibian</option>
      <option value="fish">fish</option>
      <option value="mammal" selected="selected">mammal</option>
    </select>
  </div>
  <br>
  <button id="add_new_animal_button">Add New Animal
  </button>
</p>
<br>

